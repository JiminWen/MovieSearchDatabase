<h2>Movie update</h2>



<div class="container">
<div class="col-md-5">
    <div class="form-area">  
        <form action="/movies/<%= movie[0].id %>?_method=PUT" method="POST" id="create">
        <br style="clear:both">
    				<div class="form-group">
    				    <label>Movie title</label>
						<input type="text" class="form-control" id="name" name="Title" placeholder="<%= movie[0].title %>" value="<%= movie[0].title %>" >
					</div>
					<div class="form-group">
					    <label>Year</label>
						<input type="text" class="form-control" id="email" name="Year" placeholder="<%= movie[0].year %>" value="<%= movie[0].year %>" >
					</div>
					<div class="form-group">
					    <label>Score</label>
						<input type="text" class="form-control" id="mobile" name="Score" placeholder="<%= movie[0].score %>" value="<%= movie[0].score %>" >
					</div>
					<div class="form-group">
					    <label>imdb link</label>
						<input type="text" class="form-control" id="subject" name="Link" placeholder="<%= movie[0].link %>" value="<%= movie[0].link %>" >
					</div>
					
					<div class="form-group">
					<label>Director name</label>
					<select id="select_director" name="director1" value="<%= movie[0].director_name %>">
						<% for(var i=0;i<director.length;i++){ %>
						<option value="<%= director[i].director_name %>"><%= director[i].director_name %></option>
						<% } %>
					</select>
					</div>
					
					

        <button type="submit" id="submit" name="submit" class="btn btn-primary pull-right">Submit Form</button>
        </form>
    </div>
