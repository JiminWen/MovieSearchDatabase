<h2>actor in details</h2>
<center>
    
<div class="container-fluid">
<div class="table-responsive">  
<table class="table table-striped">
<tbody class="reactable-data">   
<thead>
<tr class="reactable-column-header">
    <td id="number" class="target">#</td>
    <td id="name" class="target">name</td>
    <td id="facebook_likes" class="target">facebook_likes</td>
    <td id="movies" class="target">movie attended</td>
    <td id="directors" class="target">directors coorporated</td>
</tr>    
</thead>
<tr>
    <td>
    <%=  result[0].id  %>
    </td>
    <td>
    <a href="/actors/<%= result[0].id %>"><%=  result[0].actor_name  %></a>
    </td>
    <td>
    <%=  result[0].facebook_likes  %>
    </td>
    <td>
    <%=  result[0].movies  %>
    </td>
    <td>
    <%=  result[0].directors  %>
    </td>
    
</tr>    
</tbody> 

</table>
</div>  
</div>   

<button type="button" class="btn btn-default" id="delete">Delete</button>

<form action="/actors/<%= result[0].id %>/edit" method="get" id="edit">
<button type="submit" class="btn btn-default">Update</button>
</form>

<script>
  $(document).ready(function(){
    $("#delete").click(function(){
    $.post({
    type: "DELETE",
    url: "/actors/<%= result[0].id %>",
    data: "name=someValue",
     success: function(data) {
        window.location=data;
    },
    error: function(error) {
        console.log(error);
    }
});
    });
    });
</script> 
  
  

