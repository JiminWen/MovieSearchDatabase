<h2>Actor update</h2>


<div class="container">
<div class="col-md-5">
    <div class="form-area">  
        <form action="/actors/<%= actor[0].id %>?_method=PUT" method="POST" id="create">
        <br style="clear:both">
    				<div class="form-group">
    				    <label>Actor name</label>
						<input type="text" class="form-control" id="name" name="name" placeholder="<%= actor[0].actor_name %>" value="<%= actor[0].actor_name %>" >
					</div>
					<div class="form-group">
					    <label>Facebook likes</label>
						<input type="text" class="form-control" id="email" name="facebook_likes" placeholder="<%= actor[0].facebook_likes %>" value="<%= actor[0].facebook_likes %>" >
					</div>
					
					<div class="form-group">
					<label>Movie attended</label>
					<select id="select_director" name="movie" value="<%= movie[0] %>">
						<% for(var i=0;i<movie.length;i++){ %>
						<option value="<%= movie[i].title %>"><%= movie[i].title %></option>
						<% } %>
					</select>
					</div>
					
					

        <button type="submit" id="submit" name="submit" class="btn btn-primary pull-right">Submit Form</button>
        </form>
    </div>
</div>
</div>