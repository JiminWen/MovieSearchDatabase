</nav>
<br>
<br>      
<h2>Movie details</h2>
<div class="container-fluid">
<div class="table-responsive">  
<table class="table table-striped">
  
<thead class="thead-inverse">
<tr class="reactable-column-header">
    <td id="number" class="target">#</td>
    <td id="title" class="target">title</td>
    <td id="year" class="target">year</td>
    <td id="rank" class="target">rank</td>
    <td id="director" class="target">director</td>
    <td id="actors" class="target">actors</td>
    <td id="operate" class="target">imdb page</td>
</tr>    
</thead>
<tbody class="reactable-data"> 

<tr>
    <td>
    <%=  result[0].id  %>
    </td>
    <td>
    <a href="/movies/<%= result[0].id  %>"><%=  result[0].title  %></a>
    </td>
    <td>
    <%=  result[0].year  %>
    </td>
    <td>
    <%=  result[0].score  %>
    </td>
    <td>
    <%=  result[0].director_name  %>
    </td>
    <td>
    <%=  result[0].list %>
    </td>
    <td>
     <a href=<%=  result[0].link  %>
    >link</a>
    </td>
</tr>    

</tbody> 

</table>
</div>  
</div>    

<button type="button" class="btn btn-default" id="delete">Delete</button>

<form action="/movies/<%= result[0].id %>/edit" method="get" id="edit">
<button type="submit" class="btn btn-default">Update</button>
</form>

<script>
  $(document).ready(function(){
    $("#delete").click(function(){
    $.post({
    type: "DELETE",
    url: "/movies/<%= result[0].id %>",
    data: "name=someValue",
     success: function(data) {
        window.location=data;
    },
    error: function(error) {
        console.log(error);
    }
});
    });
    });
 
  
  
</script>
